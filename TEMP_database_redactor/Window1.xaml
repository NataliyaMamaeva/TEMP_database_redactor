<Window x:Class="AdoLibraryApp.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdoLibraryApp"
        mc:Ignorable="d"
        Title="Window1" Height="200" Width="400"
        x:Name="welcomeWindow"
        Background="#293133">

    <StackPanel>
        <TextBlock Margin="10" Height="40">
            WELCOME TO MY DATABASE REDACTOR! PUT YOUR CONNECTION STRING HERE:
        </TextBlock>
        <TextBox x:Name="conString" Margin="10,0" Height="40" Background="#2f2b2b" Foreground="White">
        </TextBox>
        <Button x:Name="butStringUpload" Click="ButtonStringUpload_Click" Width="100" Height="30" Margin="10, 20">
            <TextBlock FontSize="12" Margin="5"
                     FontWeight="Bold" Foreground="#2f2b2b"
                      FontFamily="Ubuntu">ЗАГРУЗИТЬ</TextBlock>
        </Button>
    </StackPanel>
</Window>
